{
  "name": "firemob",
  "version": "0.1.0",
  "description": "",
  "main": "dist/firemob.js",
  "types": "dist/firemob.d.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:nocoverage": "jest --coverage false",
    "test:debug": "jest --coverage false -t __DEBUG__",
    "build": "webpack",
    "lint": "tslint --format stylish src/*.ts src/**/*.ts",
    "lint:fix": "tslint --format stylish --fix src/*.ts src/**/*.ts",
    "report-coverage": "minicat coverage/lcov.info | coveralls",
    "check": "npm run lint:fix && npm run build && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mwikstrom/firemob.git"
  },
  "author": "Mårten Wikström",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mwikstrom/firemob/issues"
  },
  "homepage": "https://github.com/mwikstrom/firemob#readme",
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.spec\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "collectCoverage": true,
    "mapCoverage": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "index\\.ts",
      "\\.spec\\.ts$"
    ],
    "coverageReporters": [
      "text",
      "lcov"
    ]
  },
  "dependencies": {
    "mobx": "^3.6.1"
  },
  "devDependencies": {
    "@types/jest": "^22.2.0",
    "clean-webpack-plugin": "^0.1.19",
    "coveralls": "^3.0.0",
    "dts-bundle": "^0.7.3",
    "jest": "^22.4.2",
    "minicat": "^1.0.0",
    "ts-jest": "^22.4.1",
    "ts-loader": "^3.4.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2",
    "webpack": "^3.10.0"
  }
}
